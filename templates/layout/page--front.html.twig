{#
/**
 * @file
 * Theme override to display a single page.
 */
#}

{{ attach_library('bullensteeg/frontjs') }}
{{ attach_library('bullensteeg/animatestyle') }}

<header class="header">

    <div class="container">

      <div class="header__top">

        <div class="site__name heading">
        {#  the site name and slogan out of configuration via .theme file #}
          {{ site_name }}
        </div>

        <div class="header__menu">
          {% include directory ~ '/templates/partials/shared/navigation.html.twig' %}
        </div>

      </div>

    </div>

    <div class="container">

      <div class="header__main">    
        {% include directory ~ '/templates/partials/front-page/header-front.html.twig' %}   
      </div>

    </div>

</header>

    {% include directory ~ '/templates/partials/front-page/aboutus.html.twig' %}

    {% include directory ~ '/templates/partials/front-page/pups-expected.html.twig' %}

    <div class="container">

        {% include directory ~ '/templates/partials/front-page/our-pets.html.twig' %}

        {% include directory ~ '/templates/partials/front-page/news.html.twig' %}

    </div>

    {% include directory ~ '/templates/partials/shared/footer.html.twig' %}